{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@now/node-server"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo-uri-condor",
    "JWT_SECRET": "@jwt-secret-condor"
  },
  "routes": [
    { "src": "/auth/.*", "dest": "/index.js" },
    { "src": "/api/.*", "dest": "/index.js" }
  ]
}
